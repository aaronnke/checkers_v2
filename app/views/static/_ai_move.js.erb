$('.checkers-board').remove();
$('body').append('<%= j render "board" %>');

<% if @winner %>
  $('.turn-board').text("<%= @winner.capitalize %> wins!");
  whiteTurn = false;
  blackTurn = false;
<% else %>
  whiteTurn = true;
  blackTurn = false;
  $('.turn-board').text("White's move.");
<% end %>
