$('.checkers-board').remove();
$('body').append('<%= j render "board" %>');

<% if @player == "B" %>
  $('.checkers-board')[0].style.transform = "rotate(180deg)";
  noSelectedPiece = true;
  whiteTurn = false;
  blackTurn = true;
  $('.turn-board').text("Black's move.");
<% else %>
  noSelectedPiece = true;
  whiteTurn = true;
  blackTurn = false;
  $('.turn-board').text("White's move.");
<% end %>
